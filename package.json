{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start-node": "docker run --name waves-private-node -d -p 6869:6869 wavesplatform/waves-private-node",
    "stop-node": "docker stop waves-private-node",
    "drop-node": "docker rm waves-private-node",
    "reset-state": "npm run stop-node && npm run drop-node && npm run start-node",
    "explorer": "docker run -d -e API_NODE_URL=http://localhost:6869 -e NODE_LIST=http://localhost:6869 -p 3000:8080 wavesplatform/explorer",
    "compile": "cd compiler && TESTNETNODE=https://nodes-testnet.wavesnodes.com MAINNETNODE=https://nodes.wavesnodes.com go run main.go",
    "deploy-testnet": "cd deployer && MODE=deployTestnet TESTNETNODE=https://nodes-testnet.wavesnodes.com MAINNETNODE=https://nodes.wavesnodes.com CONTRACTS=../contracts.yaml go run main.go",
    "compare-mainnet": "cd deployer && MODE=compareMainnet TESTNETNODE=https://nodes-testnet.wavesnodes.com MAINNETNODE=https://nodes.wavesnodes.com CONTRACTS=../contracts.yaml go run main.go",
    "test-voting-verified": "mocha --parallel --bail --require test/voting_verified/_hooks.mjs test/voting_verified",
    "test-assets-store": "mocha --parallel --bail --require test/assets_store/_hooks.mjs test/assets_store",
    "test-user-pools": "mocha --parallel --bail --require test/user_pools/_hooks.mjs test/user_pools",
    "test-factory-v2": "mocha --parallel --bail --require test/factory_v2/_hooks.mjs test/factory_v2",
    "test-vesting": "mocha --parallel --require test/vesting/_hooks.mjs test/vesting --timeout 999999",
    "test-voting-emission-candidate": "mocha --parallel --require test/voting_emission_candidate/_hooks.mjs test/voting_emission_candidate --timeout 999999",
    "test-voting-emission": "mocha --parallel --require test/voting_emission/_hooks.mjs test/voting_emission",
    "test-lp-staking-v2": "mocha --parallel --require test/lp_staking_v2/_hooks.mjs test/lp_staking_v2",
    "test-lp": "mocha --parallel --require test/lp/_hooks.mjs test/lp",
    "test-lp-stable": "mocha --parallel --require test/lp_stable/_hooks.mjs test/lp_stable",
    "test-lp-stable-decimals-case": "mocha --parallel --require test/lp_stable/decimals_case/_hooks.mjs test/lp_stable/decimals_case",
    "ci-test": "concurrently --max-processes 10 --timings npm:test-*",
    "test": "API_NODE_URL=http://localhost:6869 npm run ci-test",
    "lint": "eslint . --ext .mjs --ext .js",
    "lint-fix": "eslint . --ext .mjs --ext .js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waves-exchange/contracts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/waves-exchange/contracts/issues"
  },
  "homepage": "https://github.com/waves-exchange/contracts",
  "dependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@waves/bignumber": "^1.1.1",
    "@waves/node-api-js": "^1.2.6",
    "@waves/ride-js": "^2.2.0",
    "@waves/ts-lib-crypto": "^1.4.4-beta.1",
    "@waves/waves-transactions": "^4.2.5-beta.3",
    "axios": "^0.26.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.1.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "level": "^8.0.0",
    "mocha": "^9.2.1",
    "ora": "^6.1.0",
    "prompts": "^2.4.2",
    "table": "^6.8.0"
  }
}
