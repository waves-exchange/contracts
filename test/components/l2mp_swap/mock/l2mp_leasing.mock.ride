{-# STDLIB_VERSION 6 #-}
{-# CONTENT_TYPE DAPP #-}
{-# SCRIPT_TYPE ACCOUNT #-}

let contractFile = "l2mp_leasing.ride"

func wrapErr(msg: String) = {
  contractFile + ": " + msg
}

func throwErr(msg: String) = {
  throw(wrapErr(msg))
}

@Callable(i)
func leaseByAddress(userAddress: String, nodeAddress: String) = {
  strict check = [
    i.originCaller.toString() == userAddress || "i.originCaller should be equal to userAddress".throwErr()
  ]

  (nil, unit)
}
